extends ../layout/index

block contenido
    div.py-10 
        h1.text-center.text-4xl.font-extrabold.my-10 Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
             form.space-y-5(method="POST" action="/auth/olvide_password" noValidate)
                input(type="hidden" name="_csrf" value= csrfToken)
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold EMAIL
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.mb-4(placeholder="Ingresa tu Email" type="email" name="email" value= usuario ? usuario.email : '')

                div.flex.items-center.justify-between.mb-4
                    a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes Cuenta? Inicia Sesión
                    a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes Cuenta? Crea Una

                input(class="bg-indigo-600 w-full hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Código")