extends ../layout/index

block contenido
    div.py-10 
        h1.text-center.text-4xl.font-extrabold.my-10 Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
             form(method="POST" action='/auth/registro' noValidate)
                input(type="hidden" name="_csrf" value= csrfToken)
                div 
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="nombre") NOMBRE
                    input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.mb-4(placeholder="Ingresa tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") EMAIL
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.mb-4(placeholder="Ingresa tu Email" type="email" name="email" value= usuario ? usuario.email : '')
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") PASSWORD
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.mb-4(placeholder="Ingresa tu Password" type="password" name="password")
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="repetir-password") REPETIR PASSWORD
                    input#repetir-password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.mb-4(placeholder="Repite tu password" type="password" name="repetir_password")

                div.flex.items-center.justify-between.mb-4
                    a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes Cuenta? Inicia Sesión
                    a.text-gray-500.text-xs(href="/auth/olvide_password") Olvidé mi Password

                input(class="bg-indigo-600 w-full hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")